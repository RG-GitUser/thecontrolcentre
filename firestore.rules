rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Control Centre app state (single doc) + protocol file attachments â€” signed-in users only so all see the same data
    match /app/controlcentre {
      allow read, write: if request.auth != null;
    }
    match /protocolFiles/{fileId} {
      allow read, write: if request.auth != null;
    }
  }
}
